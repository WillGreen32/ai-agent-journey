# day5_removing_drill.py

# 1) Setup
fruits = ["apple", "banana", "cherry", "banana", "orange"]
print("start:", fruits)

# 2) remove(value): first match only
fruits.remove("banana")
print("after remove('banana'):", fruits)   # expect ['apple','cherry','banana','orange']

# 3) pop() last and pop(1)
popped_last = fruits.pop()
print("popped_last:", popped_last)         # expect 'orange'
print("after pop():", fruits)

popped_idx1 = fruits.pop(1)
print("popped_idx1:", popped_idx1)         # expect 'cherry'
print("after pop(1):", fruits)             # expect ['apple','banana']

# 4) del slice (remove a range)
nums = [10, 20, 30, 40, 50, 60]
del nums[2:5]                               # remove 30,40,50
print("after del nums[2:5]:", nums)         # expect [10,20,60]

# 5) remove ALL occurrences of 'banana' two ways
fr = ["apple","banana","banana","cherry","banana"]
while "banana" in fr:
    fr.remove("banana")
print("while-remove:", fr)                  # expect ['apple','cherry']

fr = ["apple","banana","banana","cherry","banana"]
fr = [x for x in fr if x != "banana"]
print("comprehension:", fr)                 # expect ['apple','cherry']
